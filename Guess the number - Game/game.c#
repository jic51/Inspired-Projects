using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Think of a number between 1 and 10. I will try to guess it!");
        Console.WriteLine("When I make a guess, please tell me if your number is 'Higher', 'Lower', or if I am 'Correct'.");
        Console.WriteLine("Type 'h' for higher, 'l' for lower, or 'c' for correct.");

        int min = 1;
        int max = 10;
        int guessCount = 0;
        string userFeedback = "";

        while (userFeedback != "c")
        {
            if (min > max)
            {
                Console.WriteLine("Hmm, it seems like your feedback was inconsistent. Let's try again!");
                return;
            }

            int computerGuess = (min + max) / 2;
            guessCount++;
            
            Console.WriteLine($"Is your number {computerGuess}?");
            userFeedback = Console.ReadLine().ToLower();

            if (userFeedback == "l")
            {
                max = computerGuess - 1;
            }
            else if (userFeedback == "h")
            {
                min = computerGuess + 1;
            }
            else if (userFeedback != "c")
            {
                Console.WriteLine("That's not a valid response. Please type 'h', 'l', or 'c'.");
                guessCount--;
            }
        }
        Console.WriteLine($"Amazing! I guessed your number in {guessCount} tries.");
    }
}
